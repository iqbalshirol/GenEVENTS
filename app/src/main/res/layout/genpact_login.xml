<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D7D7D7">

        <ImageView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/login_banner" />

        <LinearLayout
            android:id="@+id/ll_login_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_login"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="11dp"
                android:alpha="0.5"
                android:fontFamily="roboto"
                android:gravity="left|center"
                android:text="Email"
                android:textColor="#1D1D26"
                android:textSize="15.83dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@null"
                android:ems="15"
                android:hint="leninjoy@gmail.com"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:textColor="#1D1D26"
                android:textSize="20.58dp" />

            <View
                android:id="@+id/line_below_username"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="#ECECEC"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_pin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="11dp"
                android:alpha="0.5"
                android:fontFamily="roboto"
                android:gravity="left|center"
                android:text="Pin"
                android:textColor="#1D1D26"
                android:textSize="15.83dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="15"
                    android:hint="* * * *"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#1D1D26"
                    android:textSize="20.58dp" />

                <TextView
                    android:id="@+id/tv_forgot_pin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2.5"
                    android:fontFamily="roboto"
                    android:gravity="right|center_vertical"
                    android:text="Forgot Pin"
                    android:textColor="#032138"
                    android:textSize="19dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:id="@+id/line_below_pin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="#ECECEC"
                android:scaleType="fitXY" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"

            android:background="#032138"
            android:fontFamily="roboto light"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:textSize="23.75dp"
            android:textStyle="normal" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>